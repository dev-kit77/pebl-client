<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="layoutParent" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #c9e6f0;" stylesheets="@../css/Format.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.pebl.profile.ProfileCtrl">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="btnRefresh" mnemonicParsing="false" text="Refresh" />
              <MenuItem mnemonicParsing="false" text="Switch User" />
                  <MenuItem mnemonicParsing="false" text="Close" onAction="#closeWindow"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Edit Profile" />
                  <MenuItem mnemonicParsing="false" text="User Settings" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="View">
               <items>
                  <CheckMenuItem mnemonicParsing="false" text="Connections" />
                  <CheckMenuItem mnemonicParsing="false" text="Profile" />
                  <CheckMenuItem mnemonicParsing="false" text="Leaderboard" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
                  <MenuItem mnemonicParsing="false" text="About" onAction="#showAbout"/>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblDisplayName" text="Displayname">
               <font>
                  <Font name="Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="lblUsername" text="\@username">
               <font>
                  <Font name="Roboto Condensed Italic" size="13.0" />
               </font>
            </Label>
            <Label fx:id="lblStatus" text="Status Message">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblFollowers" text="0 Followers">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblFollowing" text="0 Following">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblPostNo" text="0 Posts">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label prefWidth="34.0" text="Skips:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label text="Age: 0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label text="Gender: null">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label text="Location: null">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <right>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="325.0" minWidth="260.0" spacing="2.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Posts">
               <font>
                  <Font name="Bold" size="24.0" />
               </font>
            </Label>
            <ScrollPane hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="275.0" minWidth="250.0" style="-fx-border-color: #c9e6f0;">
               <content>
                  <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #c9e6f0;" />
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets left="2.0" right="2.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
